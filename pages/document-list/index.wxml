<view wx:if="{{ files.length !== 0 }}" class="file-list">
  <view wx:for="{{ files }}" wx:key="id" class="file-item">
    <view class="left">
      <view class="title">{{ item.name }}</view>
      <view class="info">
        <text>{{ item.type }}</text>
        <text>{{ item.size }}</text>
      </view>
      <view class="operate">
        <view class="download">
          <image src="/icons/download.svg" mode="aspectFit" lazy-load />
          <text>下载</text>
        </view>
        <view class="check">
          <image src="/icons/check.svg" mode="aspectFit" lazy-load />
          <text>查看</text>
        </view>
      </view>
    </view>
    <view class="right">
      <view class="icon">
        <image wx:if="{{ item.type === 'DOCX' }}" src="/icons/files/word.svg" mode="aspectFit" lazy-load />
        <image wx:elif="{{ item.type === 'XLSX' }}" src="/icons/files/xlsx.svg" mode="aspectFit" lazy-load />
        <image wx:elif="{{ item.type === 'PPT' }}" src="/icons/files/ppt.svg" mode="aspectFit" lazy-load />
        <image wx:elif="{{ item.type === 'PDF' }}" src="/icons/files/pdf.svg" mode="aspectFit" lazy-load />
        <image wx:elif="{{ item.type === 'ZIP' }}" src="/icons/files/zip.svg" mode="aspectFit" lazy-load />
        <image wx:else src="/icons/files/unknown.svg" mode="aspectFit" lazy-load />
      </view>
      <view class="date">{{ item.date }}</view>
    </view>
  </view>
</view>

<view wx:else class="empty-statement">
  <van-image width="200" height="200" src="/images/empty-content.png" fit="contain" lazy-load />
</view>

<van-toast id="van-toast" />
