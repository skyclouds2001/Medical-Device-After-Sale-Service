<welcome-bg />

<view class="service-list">
  <view class="header">服务列表</view>
  <view class="content">
    <view class="item">
      <van-icon class="icon" name="phone" />
      <view class="text">安装</view>
    </view>
  </view>
</view>

<view class="history">
  <view class="header">
    <view class="title">您最近的咨询</view>
    <view class="more">查看更多<van-icon name="arrow" /></view>
  </view>
  <view class="content">
    <view wx:for="{{ conductHistories }}" wx:key="history_id" class="item">
      <view class="info">
        <view class="desc">{{ item.topic }}</view>
        <view class="date">{{ item.consult_time }}</view>
      </view>
      <view class="operate">
        <view>巡检</view>
        <button bind:tap="handleConnectKefu" mark:link="{{ item.kf_link }}">查看</button>
      </view>
    </view>
  </view>
</view>

<view class="connect-customer-servier" bind:tap="handleConnectKefu">
  <van-icon class="icon" name="service-o" />
  <view class="text">联系客服</view>
</view>

<van-toast id="van-toast" />
